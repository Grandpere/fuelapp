{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .admin-shell {
            max-width: 1360px;
            margin: 0 auto;
            padding: 1rem;
            display: grid;
            gap: 1rem;
            grid-template-columns: 260px minmax(0, 1fr);
        }

        .admin-sidebar {
            padding: 1rem;
            position: sticky;
            top: 1rem;
            height: fit-content;
        }

        .admin-title {
            margin: 0;
            font-family: 'Space Grotesk', sans-serif;
            font-size: 1.1rem;
        }

        .admin-subtitle {
            margin: 0.35rem 0 0;
            color: var(--text-soft);
            font-size: 0.82rem;
        }

        .admin-nav {
            margin-top: 1rem;
            display: grid;
            gap: 0.5rem;
        }

        .admin-nav-link {
            display: block;
            padding: 0.62rem 0.72rem;
            border-radius: 10px;
            text-decoration: none;
            border: 1px solid rgba(101, 146, 174, 0.28);
            background: rgba(8, 27, 40, 0.45);
            color: #dce9f3;
            font-weight: 600;
            font-size: 0.88rem;
        }

        .admin-nav-link.is-active {
            border-color: rgba(247, 181, 0, 0.6);
            background: rgba(247, 181, 0, 0.15);
            color: #fff5dd;
        }

        .admin-main {
            min-width: 0;
        }

        .admin-panel {
            padding: 1.1rem;
        }

        .admin-metric-grid {
            display: grid;
            gap: 0.9rem;
            grid-template-columns: repeat(3, minmax(0, 1fr));
        }

        .admin-metric-card {
            padding: 0.9rem;
        }

        .admin-metric-label {
            margin: 0;
            font-size: 0.78rem;
            color: var(--text-soft);
            text-transform: uppercase;
            letter-spacing: 0.04em;
        }

        .admin-metric-value {
            margin: 0.35rem 0 0;
            font-family: 'Space Grotesk', sans-serif;
            font-size: 2rem;
            line-height: 1;
        }

        .admin-inline-list {
            margin: 0;
            padding: 0;
            list-style: none;
            display: flex;
            gap: 0.6rem;
            flex-wrap: wrap;
        }

        .admin-dl {
            margin: 0;
            display: grid;
            grid-template-columns: minmax(140px, 220px) minmax(0, 1fr);
            gap: 0.55rem 1rem;
        }

        .admin-dt {
            color: var(--text-soft);
            font-size: 0.83rem;
        }

        .admin-dd {
            margin: 0;
            font-weight: 600;
            word-break: break-word;
        }

        @media (max-width: 980px) {
            .admin-shell {
                grid-template-columns: 1fr;
            }

            .admin-sidebar {
                position: static;
            }

            .admin-metric-grid {
                grid-template-columns: repeat(2, minmax(0, 1fr));
            }
        }

        @media (max-width: 640px) {
            .admin-metric-grid {
                grid-template-columns: 1fr;
            }

            .admin-dl {
                grid-template-columns: 1fr;
                gap: 0.2rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="admin-shell">
        <aside class="admin-sidebar card" aria-label="Navigation admin">
            <h1 class="admin-title">Back-office</h1>
            <p class="admin-subtitle">Operations and system management</p>
            <nav class="admin-nav">
                <a class="admin-nav-link {{ admin_section is defined and admin_section == 'dashboard' ? 'is-active' : '' }}" href="{{ path('ui_admin_dashboard') }}">Dashboard</a>
                <a class="admin-nav-link {{ admin_section is defined and admin_section == 'stations' ? 'is-active' : '' }}" href="{{ path('ui_admin_station_list') }}">Stations</a>
                <a class="admin-nav-link {{ admin_section is defined and admin_section == 'vehicles' ? 'is-active' : '' }}" href="{{ path('ui_admin_vehicle_list') }}">Vehicles</a>
                <a class="admin-nav-link {{ admin_section is defined and admin_section == 'imports' ? 'is-active' : '' }}" href="{{ path('ui_admin_import_job_list') }}">Imports</a>
            </nav>
        </aside>

        <main class="admin-main">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash" style="{{ label == 'error' ? 'border-color: rgba(255,95,86,0.5); background: rgba(103,33,40,0.4); color: #ffd6d4;' : '' }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block admin_content %}{% endblock %}
        </main>
    </div>
{% endblock %}
