{% extends 'base.html.twig' %}

{% block title %}New Receipt{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .new-page {
            max-width: 860px;
            margin: 0 auto;
            display: grid;
            gap: 1rem;
        }

        .new-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 0.8rem;
        }

        .new-card {
            padding: 1rem;
        }

        @media (max-width: 720px) {
            .new-header {
                flex-direction: column;
                align-items: flex-start;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <main class="app-shell new-page">
        <header class="new-header">
            <h1 class="page-title">Add receipt</h1>
            <a class="btn btn-secondary" href="{{ path('ui_receipt_index') }}">Back to list</a>
        </header>

        <section class="card new-card">
            {% include 'receipt/_form.html.twig' %}
        </section>
    </main>
{% endblock %}
